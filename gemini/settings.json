{
  "general": {
    "vimMode": true,
    "preferredEditor": "vscode"
  },
  "ui": {
    "theme": "Default"
  },
  "privacy": {
    "usageStatisticsEnabled": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "model": {
    "chatCompression": {
      "contextPercentageThreshold": 0.6
    }
  },
  "context": {
    "fileName": ["AGENTS.md", "GEMINI.md", ".vscode/copilot-instructions.md"]
  },
  "mcpServers": {
    "sequential-thinking": {
      "command": "pnpx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "memory": {
      "command": "pnpx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_FILE_PATH": "~/.gemini/knowledge_graph.json"
      }
    },
    "context7": {
      "command": "pnpx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "playwright": {
      "command": "pnpx",
      "args": ["@playwright/mcp@latest"]
    }
  }
}
