{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
      "type": "local"
    },
    "git": {
      "command": ["uvx", "mcp-server-git"],
      "enabled": true,
      "type": "local"
    },
    "playwright": {
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": true,
      "type": "local"
    },
    "sequential-thinking": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true,
      "type": "local"
    }
  },
  "provider": {
    "ollama": {
      "models": {
        "qwen3-coder-30b-32k": {
          "name": "QWEN3 Coder (30b, 32k)"
        },
        "qwen3-coder-30b-64k": {
          "name": "QWEN3 Coder (30b, 64k)"
        },
        "deepseek-r1-32k": {
          "name": "Deepseek R1 Goose (32k)"
        },
        "qwen2_5-coder-7b-32k": {
          "name": "QWEN2.5 Coder (7b, 32k)"
        }
      },
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      }
    }
  }
}
